name: SEBI hourly scraper

on:
  schedule:
    - cron: '0 * * * *'   # every hour at minute 0 (UTC). Adjust if you want offset.
  workflow_dispatch:

concurrency:
  group: sebi-hourly
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Cache pip
        uses: actions/cache@v4
        with:
          path: ~/.cache/pip
          key: ${{ runner.os }}-pip-${{ hashFiles('**/requirements.txt') }}
          restore-keys: |
            ${{ runner.os }}-pip-

      - name: Install dependencies (pip)
        run: |
          python -m pip install --upgrade pip
          if [ -f requirements.txt ]; then pip install -r requirements.txt; fi
          pip install playwright
      # Install Playwright browsers (faster via playwright-github-action)
      - name: Setup Playwright browsers
        uses: microsoft/playwright-github-action@v1
        with:
          # this installs browsers and needed deps
          install: 'chromium,firefox,webkit'

      - name: Run SEBI scraper script
        env:
          # If your script needs any secrets or envs add here (e.g., LOG_LEVEL)
          PYTHONUNBUFFERED: 1
        run: |
          # make sure the script is executable or call python
          python sebi_update_and_download_missing.py
          echo "Script finished with exit code $?"

      - name: Commit CSV if changed
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add sebi_circulars_last10_with_pdfs.csv || true
          if ! git diff --cached --quiet; then
            git commit -m "chore: update SEBI CSV (scheduled run) [skip ci]" || true
            git push origin HEAD:${{ github.ref_name }}
            echo "Committed updated CSV."
          else
            echo "No CSV changes to commit."
          fi
